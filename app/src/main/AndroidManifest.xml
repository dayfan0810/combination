<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yocn.com.collection">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base" />
        <activity
            android:name=".BaseActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ChartViewAct"
            android:label="@string/app_name"
            android:theme="@style/Transparent" />
        <activity
            android:name=".BarChartViewAct"
            android:label="@string/app_name"
            android:theme="@style/Transparent" />
        <activity
            android:name=".RippleViewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeTrans" />
        <activity
            android:name=".ParabolaViewAct"
            android:label="@string/app_name"
            android:theme="@style/Transparent" />
        <activity
            android:name=".PathActivity"
            android:label="@string/app_name"
            android:theme="@style/Transparent" />
        <activity
            android:name=".RecycleViewAct"
            android:label="@string/app_name"
            android:theme="@style/Transparent" />
        <activity
            android:name=".TestViewAct"
            android:label="@string/app_name"
            android:theme="@style/Transparent" />
        <activity
            android:name=".SettingAct"
            android:label="@string/app_name"
            android:theme="@style/Transparent" />
    </application>


</manifest>
